<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- ✅ Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.fitnesstracker"
        tools:targetApi="31">

        <!-- ✅ Launch Screen - First screen that opens -->
        <activity
            android:name=".WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- ✅ OnBoarding Screens -->
        <activity
            android:name=".OnboardingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- ✅ Login Screen -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
        <!-- ✅ Register Screen -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".SetUpActivity"
            android:exported="true" />
        <!-- ✅ Forget Password Screen -->
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="true" />
        <!-- ✅ Gender Screen -->
        <activity
            android:name=".GenderActivity"
            android:exported="true" />
        <!-- ✅ Age Screen -->
        <activity
            android:name=".AgeActivity"
            android:exported="true" />
        <activity
            android:name=".ConfirmActivity"
            android:exported="true"/>
        <!--
<activity
            android:name=".my_nav"
            android:exported="true"
            android:label="@string/title_activity_my_nav"
            android:theme="@style/Theme.fitnesstracker.NoActionBar" />
        -->
        <!-- ✅ Splash Screen - First screen that opens -->
        <!-- ✅ Main Activity - our app starts -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>